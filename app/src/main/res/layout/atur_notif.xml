<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#0D7D6C">

        <TextView
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:text="Subuh"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:layout_gravity="center"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="311dp"
        android:layout_height="190dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifikasi"
            android:textColor="#0D7D6C"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_melengkung"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/notifputih" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:text="Suara"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/melengkungnotif"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/muteijo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:text="Diam "
                android:textColor="#0D7D6C"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Waktu Peringatan"
            android:textColor="#0D7D6C"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <TextView
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/button_melengkung"
                android:gravity="center"
                android:text="Tepat"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/melengkungnotif"
                android:gravity="center"
                android:text="-5 mnt"
                android:textColor="#0D7D6C"
                android:textSize="15sp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/melengkungnotif"
                android:gravity="center"
                android:text="-10 mnt"
                android:textColor="#0D7D6C"
                android:textSize="15sp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/melengkungnotif"
                android:gravity="center"
                android:text="-15 mnt"
                android:textColor="#0D7D6C"
                android:textSize="15sp" />

        </LinearLayout>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="simpan"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/button_melengkung"
        android:layout_gravity="center"/>

</LinearLayout>